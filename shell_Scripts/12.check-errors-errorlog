#!/bin/bash 
# description: write a shell script to check errors in error logs 
error_file=`cat /var/log/message`
matched-error=`grep -i error /var/log/messages`
echo $matched-error
  if [[ $? -eq 0]];
then 
  echo "found error in OSlogs : $matched_error "
else 
  echo "no error in message logs "
fi 


















